<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a class="btn btn-success" href="/admin/users/create">Registrar Usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td>
                        <form method="post" action="/users/delete" style="display: inline;" onsubmit="confirmDelet(event, this)">
                            <input type="hidden" name="email" value="<%= user.email %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>


<%- include ('../../partials/footer.ejs') %>

<script>
    function confirmDelet(event, form){
        event.preventDefault()
        var decision = confirm("Tem certeza que deseja deletar?")
        if(decision){
           form.submit()
        }
    }
</script>