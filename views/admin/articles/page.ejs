<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>
<body>
    <div class="container mt-3">
        <hr>
        <% result.articles.rows.forEach(article =>{ %>
            <div class="card mt-2">
                <div class="card-header">
                    <%= article.title %>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ler Artigo</a>
                </div>
            </div>
           <% }) %>

           <div class="row">
            <div class="col col-12">
                        <% if(result.page > 2 ) { %>
                            <a style="float: left;" href="/articles/page/<%= result.page - 1 %>" class="btn btn-dark mt-3"> <<<< Prev </a>
                        <% } else if (result.page == 2) { %>
                            <a style="float: left;" href="/" class="btn btn-dark mt-3"> <<<< Prev </a>
                        <% } %>

                <% if(result.next) {%>
                <a style="float: right;" href="/articles/page/<%= result.page + 1 %>" class="btn btn-dark mt-3">Next>>></a>
                    <% } %>
            </div>
            <hr>
        </div>
        <hr>
    </div>
</body>

