<%- include ('../../partials/navbar.ejs') %>

<div class="container mt-2">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Edição de Categoria</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input type="text" name="title" placeholder="Digite uma categoria" class="form-control" value="<%= category.title %>"><br>
                <input type="hidden" name="id" value="<%= category.id %>">
                <button class="btn btn-success mt-2">Atualizar</button>
            </form>
        </div>
    </div>
</div>


