<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-success m-2" href="/admin/categories/new">Criar Nova Categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category =>{%>
                <tr>
                    <th><%= category.id%></th>
                    <th><%= category.title%></th>
                    <th><%= category.slug%></th>
                    <th>
                            <a href="/admin/categories/edit/<%= category.id%>"><button class="btn btn-warning">Editar</button></a>
                
                        <form method="post" action="/categories/delete" style="display: inline;" onsubmit="confirmDelet(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                        

                    </th>
                </tr>
            <%}) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs') %>

<script>
    function confirmDelet(event, form){
        event.preventDefault()
        var decision = confirm("Tem certeza que deseja deletar?")
        if(decision){
           form.submit()
        }
    }
</script>